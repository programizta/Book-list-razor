@page
@model Book_library.IndexModel
@{
    ViewData["Title"] = "All books";
}

<br />

<div class="container row p-0 m-0">

    <div class="col-9">
        <h2 class="text-info">List of books</h2>
    </div>

    <div class="col-3">
        <a asp-page="AddBook" class="btn btn-info form-control text-white">Add new book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Books.Any())
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Books.FirstOrDefault().Title">Title</label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Author">Author</label>
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().ISBN">ISBN Number</label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var book in Model.Books)
                    {
                        <tr>
                            <td>
                                @book.Title
                            </td>
                            <td>
                                @book.Author
                            </td>
                            <td>
                                @book.ISBN
                            </td>
                            <td>
                                <button class="btn btn-danger btn-sm">Delete</button>
                                <a class="btn btn-warning btn-sm text-white">Edit</a>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>There are no books!</p>
            }
        </form>
    </div>
</div>

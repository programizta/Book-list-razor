@page
@model Book_library.UpsertBookModel
@{
    ViewData["Title"] = "Upserting a book";
}

<br />
<h2 class="text-info"> @(Model.Book.BookId != 0 ? "Editing" : "Inserting") a book</h2>
<br />

<div class="border container" style="padding: 30px;">
    <form method="post">
        @if (Model.Book.BookId != 0)
        {
            <input type="hidden" asp-for="Book.BookId" />
        }

        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Title"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Book.Title" />
            </div>
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.Author"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Book.Author" />
            </div>
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Book.ISBN"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Book.ISBN" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-3">
                <button type="submit" class="btn btn-primary form-control">@(Model.Book.BookId != 0 ? "Apply changes" : "Add new book")</button>
            </div>

            <div class="col-3">
                <a asp-page="Index" class="btn btn-danger form-control">Cancel</a>
            </div>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

